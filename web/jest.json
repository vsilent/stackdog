{
  "verbose": true,
  "testRegex": "(/spec/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "testPathIgnorePatterns": [
    "/dist/",
    "/node_modules/"
  ],
  "moduleFileExtensions": [
    "js",
    "ts",
    "tsx"
  ],
  "globals": {
    "window": {},
    "ts-jest": {
      "tsconfig": "./tsconfig.json"
    }
  },
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!/node_modules/",
    "!src/index.tsx"
  ],
  "preset": "ts-jest",
  "testMatch": null
}